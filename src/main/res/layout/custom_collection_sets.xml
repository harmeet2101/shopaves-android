<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_dividr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp5">

    <RelativeLayout
        android:id="@+id/usrprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/dp10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/usr"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:src="@drawable/female" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/usr"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usr_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/user_nme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_toRightOf="@+id/by"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:id="@+id/tag_tm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1hr ago"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp13" />

                <ImageView
                    android:layout_width="@dimen/dp12"
                    android:layout_height="@dimen/dp12"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_toLeftOf="@+id/tag_tm"
                    android:src="@drawable/clock" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="#EAF0F5"/>
    <LinearLayout
        android:id="@+id/setview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_dividr"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/setoneimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp2"
                        android:background="@drawable/dotted_border"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:layout_marginLeft="@dimen/dp1"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/settwoimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp2"
                        android:layout_margin="@dimen/dp10"
                        android:background="@drawable/dotted_border"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/grey_dividr"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_dividr"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/setthreeimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp2"
                        android:layout_margin="@dimen/dp10"
                        android:background="@drawable/dotted_border"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:layout_marginLeft="@dimen/dp1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/setfourimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp2"
                        android:layout_margin="@dimen/dp10"
                        android:background="@drawable/dotted_border" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:background="#EAF0F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp20">

            <ImageView
                android:id="@+id/likeicon"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:src="@drawable/unlike" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="0"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/dp15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/commnts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:text="0"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/dp15" />

        </LinearLayout>

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_weight=".2"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/addto"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_weight=".2"
            android:padding="@dimen/dp5"
            android:src="@drawable/add_collection" />

    </LinearLayout>


</LinearLayout>