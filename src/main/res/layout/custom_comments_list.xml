<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d4dae7">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hdrr"
        app:cardElevation="@dimen/dp1"
        android:background="#fefeff"
        android:layout_margin="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:id="@+id/usr"
            app:civ_border_color="@color/black"
            app:civ_border_width="0dp"
            android:src="@drawable/female"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                   android:textColor="@color/black_pd"
                    android:textSize="@dimen/sp13"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hr ago"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp13"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello this is the best product"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="@dimen/sp13"/>

        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>
    </RelativeLayout>