<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_grey"
    tools:context="com.shop.shopaves.Activity.CreateCollection">

   <include layout="@layout/app_header"
       android:id="@+id/grouphead"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp1"
        android:layout_below="@+id/grouphead"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp20"
            android:orientation="vertical"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:textSize="@dimen/sp13"
                android:textColor="@color/text_hint"
                android:text="SET NAME"
                android:id="@+id/textView3" />

            <EditText
                android:id="@+id/groupname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:paddingRight="@dimen/dp10"
                android:background="@null"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="@dimen/sp15"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:hint="Enter Name"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/grey_dividr"
                android:layout_marginTop="@dimen/dp5"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:layout_marginTop="@dimen/dp20"
                android:textSize="@dimen/sp13"
                android:text="@string/description"/>
            <EditText
                android:id="@+id/desp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:gravity="top"
                android:imeOptions="actionDone"
                android:paddingBottom="@dimen/dp10"
                android:background="@null"
                android:textSize="@dimen/sp15"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:hint="Something about set..."/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/grey_dividr"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/next_to_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/orange_bttn"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/dp25"
        style="?android:attr/borderlessButtonStyle"
        android:text="SAVE &amp; ADD"
        android:textSize="@dimen/sp13"
        />


</RelativeLayout>
