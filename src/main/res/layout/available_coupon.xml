<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/dp10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/selectedcoupons"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35"
        android:src="@drawable/unchecked"
        android:padding="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp10">

        <TextView
            android:id="@+id/offdiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% OFF on Office Chairs"
            android:textColor="@color/black_pd"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="12 February,2017 - 25 February,2017"
            android:textColor="@color/fade_black"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="12 February,2017 - 25 February,2017 fvkjgfjkv e vwjkbwkbfkjw wjfbwijfbwjkv wkjbwijbwjk wjfbwijfbwjkv wekjfbw wjkfwbowubjw vwjbwbvkjkvbjibviuwbvkwjbvuiwwbv"
            android:textColor="@color/black_pd"
            android:textSize="@dimen/sp13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/dp10"
            android:textSize="@dimen/sp10"
            android:id="@+id/textView5" />

    </LinearLayout>
</LinearLayout>