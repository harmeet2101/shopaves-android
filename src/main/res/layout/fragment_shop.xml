<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
<ScrollView
    android:id="@+id/scrolview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafb"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:paddingRight="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:paddingTop="@dimen/dp2"
        android:paddingBottom="@dimen/dp5"
        android:clipToPadding="false"
   />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fafafb"
        android:padding="@dimen/dp5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_by_categories"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/black_pd"/>

        <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/addCaterory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

</HorizontalScrollView>

        <!--shop by brands-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_by_brands"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/black_pd"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/addBrands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

    <!--for addvertisment-->
    <ImageView
        android:id="@+id/smalladds_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="@dimen/dp10"
        android:scaleType="fitXY"/>

    <!--for fashion trends-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="@string/fashion_trending"
        android:textSize="@dimen/sp16"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black_pd"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/addfashiontrends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ></LinearLayout>

    </HorizontalScrollView>

<!--for advertisment-->
    <ImageView
        android:id="@+id/smalladds_second"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"/>

    <!--Whats new-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_s_new"
        android:textSize="@dimen/sp14"
        android:textColor="@color/black_pd"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/whatsnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ></LinearLayout>

    </HorizontalScrollView>

    <!--for add-->

    <ImageView
        android:id="@+id/smalladds_third"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp15"/>


    <!--Whats Hot-->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:text="@string/what_s_hot"
        android:textColor="@color/black_pd"
        android:textSize="@dimen/sp14" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/whatshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
</ScrollView>

    <RelativeLayout
        android:id="@+id/createproduct"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/orange_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp20"
        >

        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/createproduct"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</RelativeLayout>