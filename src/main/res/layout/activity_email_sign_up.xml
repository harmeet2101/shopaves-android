<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/detailsignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:id="@+id/back_click"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:src="@drawable/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/headrr"
            android:textSize="@dimen/dp15"
            android:textColor="@color/white"
            android:text="SIGN UP"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp75">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp75"
                android:layout_height="@dimen/dp75"
                app:civ_border_width="@dimen/dp3"
                app:civ_border_color="@color/light_blue"
                android:src="@drawable/female"
                android:id="@+id/addphoto_imgvw"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:src="@drawable/edit_selection"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:textColor="@color/white"
            android:textSize="@dimen/dp15"
            android:text="Welcome User!"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp20">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                app:theme="@style/TextLabel"
                android:textColorHint="@color/text_hint">
                <EditText
                    android:id="@+id/enteremail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@null"
                    android:hint="@string/email_address"
                    android:paddingRight="@dimen/dp15"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/fade_black"
                    android:textSize="@dimen/sp14"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/text_hint"
                android:layout_marginTop="@dimen/dp5"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:textColorHint="@color/text_hint"
                app:theme="@style/TextLabel"
                android:layout_marginTop="@dimen/dp10">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@android:color/transparent"
                    android:hint="@string/user_name"
                    android:inputType="textPersonName"
                    android:layout_marginTop="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:singleLine="true"
                    android:textColor="@color/fade_black"
                    android:textSize="@dimen/sp14"
                    android:id="@+id/enterusername" />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/text_hint"
                android:layout_marginTop="@dimen/dp5"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:textColorHint="@color/text_hint"
                app:theme="@style/TextLabel"
                android:layout_marginTop="@dimen/dp10">
                <EditText
                    android:id="@+id/enterphonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@android:color/transparent"
                    android:hint="@string/phone_number"
                    android:paddingRight="@dimen/dp15"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/fade_black"
                    android:textSize="@dimen/sp14"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/text_hint"
                android:layout_marginTop="@dimen/dp5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:id="@+id/calendr"
                android:layout_marginTop="@dimen/dp10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:id="@+id/set_dob"
                        android:hint="@string/date_of_birth"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:focusable="false"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp14"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/calendar"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/text_hint"
                android:layout_marginTop="@dimen/dp5"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:textColorHint="@color/text_hint"
                app:theme="@style/TextLabel"
                app:passwordToggleEnabled="false"
                android:layout_marginTop="@dimen/dp10">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="@color/fade_black"
                    android:textSize="@dimen/sp14"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/text_hint"
                android:layout_marginTop="@dimen/dp5"/>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/login_bttn"
                android:text="@string/next"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="@dimen/sp15"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>