<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_women_fashion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.shop.shopaves.Activity.WomenFashion">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp10"
        android:id="@+id/hwn"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/white"
            android:text="PRODUCT"/>
        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:id="@+id/back_wn_fashion"
            android:padding="@dimen/dp10"
            android:src="@drawable/back_arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_below="@+id/hwn"
        android:id="@+id/search_wn"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/white_back"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">
        <ImageView
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:layout_centerVertical="true"
            android:id="@+id/search"
            android:padding="@dimen/dp10"
            android:src="@drawable/search"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:inputType="text"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/fade_black"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/dp15"
            android:hint="Search"
            android:layout_toRightOf="@+id/search"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/wn_fashion_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="#FCE102"
        app:paddingStart="@dimen/dp10"
        app:paddingEnd="@dimen/dp10"
        app:tabTextColor="@color/fade_white"
        android:layout_below="@+id/search_wn"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/wn_pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:layout_below="@id/wn_fashion_tab_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp25"
        android:layout_below="@id/wn_fashion_tab_layout"
        android:id="@+id/containr_wm"/>
</RelativeLayout>
