<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp5"
    android:paddingRight="@dimen/dp5"
    tools:context="com.shop.shopaves.Fragments.Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10">

    <LinearLayout
        android:id="@+id/facebooklogin"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/facebook_btn">
        <ImageView
            android:layout_width="@dimen/dp17"
            android:layout_height= "@dimen/dp17"
            android:src="@drawable/facebook"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13"
            android:text="@string/facebook"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tweeterlogin"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:background="@drawable/twiter_btn">
        <ImageView
            android:layout_width="@dimen/dp17"
            android:layout_height="@dimen/dp17"
            android:src="@drawable/twitter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13"
            android:text="@string/twitter"/>

    </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/googlelogin"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/google_btn">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp17"
                android:src="@drawable/google"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:text="@string/google"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linkedin"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/whatsapp_btn">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp17"
                android:src="@drawable/linkedin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:text="@string/linkedin"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/instagramlogin"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/instagram_btn">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp17"
                android:src="@drawable/instagram"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:text="@string/instagram"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal"
            android:id="@+id/signup_skip"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/colormain"
                android:textSize="@dimen/sp15"
                android:text="@string/skip"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
