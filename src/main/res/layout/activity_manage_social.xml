<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_dividr"
    tools:context="com.shop.shopaves.Activity.ManageSocialActivity">

    <include layout="@layout/app_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp25"
            android:paddingBottom="@dimen/dp25">
           <ImageView
               android:id="@+id/fbicon"
               android:layout_width="@dimen/dp25"
               android:layout_height="@dimen/dp25"
               android:src="@drawable/fbsocial"/>
            <TextView
                android:id="@+id/paymenttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fbicon"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_centerVertical="true"
                android:text="@string/facebook"/>


            <Switch
                android:id="@+id/switchfacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fbicon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp25"
            android:paddingBottom="@dimen/dp25">
           <ImageView
               android:id="@+id/twtr"
               android:layout_width="@dimen/dp25"
               android:layout_height="@dimen/dp25"
               android:src="@drawable/twettersocial"/>


            <Switch
                android:id="@+id/switchtwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp13"
                android:layout_marginLeft="12dp"
                android:text="@string/twitter"
                android:layout_alignBaseline="@+id/switchtwitter"
                android:layout_alignBottom="@+id/switchtwitter"
                android:layout_toRightOf="@+id/twtr"
                android:layout_toEndOf="@+id/twtr"
                android:layout_marginStart="12dp"
                android:id="@+id/textView7" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp25"
            android:paddingBottom="@dimen/dp25">
           <ImageView
               android:id="@+id/googleicon"
               android:layout_width="@dimen/dp25"
               android:layout_height="@dimen/dp25"
               android:src="@drawable/socialgoogle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/googleicon"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_centerVertical="true"
                android:text="@string/google"/>


            <Switch
                android:id="@+id/switchgoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp25"
            android:paddingBottom="@dimen/dp25">
           <ImageView
               android:id="@+id/instanico"
               android:layout_width="@dimen/dp25"
               android:layout_height="@dimen/dp25"
               android:src="@drawable/instasocial"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/instanico"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_centerVertical="true"
                android:text="@string/instagram"/>

            <Switch
                android:id="@+id/switchinsta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

 <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp25"
            android:paddingBottom="@dimen/dp25">
           <ImageView
               android:id="@+id/linkedinimg"
               android:layout_width="@dimen/dp25"
               android:layout_height="@dimen/dp25"
               android:src="@drawable/instasocial"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/linkedinimg"
                android:textColor="@color/black_pd"
                android:textSize="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_centerVertical="true"
                android:text="@string/linkedin"/>

            <Switch
                android:id="@+id/switchlinkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
