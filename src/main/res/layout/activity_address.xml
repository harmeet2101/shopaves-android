<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_address"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shop.shopaves.Activity.AddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:id="@+id/back_addrss"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:src="@drawable/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/white"
            android:text="ADDRESS"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:textColorHint="@color/text_hint"
            app:theme="@style/TextLabel"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:hint="@string/address_c"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"
                android:id="@+id/addressfirst" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:textColorHint="@color/text_hint"
            app:theme="@style/TextLabel"
            >
            <EditText
                android:id="@+id/addresssecond"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:hint="@string/address_line_2"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:textColorHint="@color/text_hint"
            app:theme="@style/TextLabel"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:hint="@string/city"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"
                android:id="@+id/city" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:textColorHint="@color/text_hint"
            app:theme="@style/TextLabel"
            >

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@null"
                android:hint="@string/state"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"/>


            </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            app:theme="@style/TextLabel"
            android:textColorHint="@color/text_hint">
            <EditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:hint="@string/zip_code"
                android:maxLength="6"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp10"
            android:textColorHint="@color/text_hint"
            app:theme="@style/TextLabel"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@android:color/transparent"
                android:hint="@string/country_large"
                android:paddingRight="@dimen/dp15"
                android:singleLine="true"
                android:textColor="@color/fade_black"
                android:textSize="@dimen/sp14"
                android:id="@+id/country" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/text_hint"
            android:layout_marginTop="@dimen/dp5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp25">
           <ToggleButton
               android:id="@+id/chkState"
               android:layout_width="@dimen/dp40"
               android:layout_height="@dimen/dp26"
               android:background="@drawable/toggle_selector"
               android:textOff=""
               android:textOn=""
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/black"
                android:text="@string/make_this_my_default_shipping_address"
                android:textSize="@dimen/sp15"/>
        </LinearLayout>
        <Button
            android:id="@+id/addrss_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:background="@drawable/orange_bttn"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp10"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
