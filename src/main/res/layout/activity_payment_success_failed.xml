<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_success_failed"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.shop.shopaves.Activity.PaymentSuccessFailed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/colorPrimary">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp150"
                android:id="@+id/img"
                android:layout_centerInParent="true"
                android:src="@drawable/payment_accepted"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp15"
                android:id="@+id/pay"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img"
                android:textColor="@color/white"
                android:text="@string/paymentsucc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/dp10"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pay"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/your_order_is_to_be_confirmed_by_nseller_within_3_working_days"/>
            
        </RelativeLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/edit_adrs"
                android:layout_centerHorizontal="true"
             >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_details"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/sp13"/>

                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/blue_arw"/>

            </LinearLayout>

            <Button
                android:id="@+id/continueshopping"
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/orange_bttn"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp25"
                android:layout_below="@+id/edit_adrs"
                style="?android:attr/borderlessButtonStyle"
                android:layout_centerHorizontal="true"
                android:text="@string/continueshop"
                android:textSize="@dimen/sp13"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/dp25"
                android:textColor="@color/fade_black"
                android:gravity="center"
                android:text="@string/you_can_only_cancel_the_order_nwithin_15_mins"
                android:layout_below="@+id/continueshopping"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView4" />

    </LinearLayout>

</LinearLayout>
