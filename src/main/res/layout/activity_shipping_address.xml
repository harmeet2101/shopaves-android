<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shipping_address2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shop.shopaves.Activity.ShippingAddress">

    <include layout="@layout/app_header"
        android:id="@+id/head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_above="@+id/bottomview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ic"
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:src="@drawable/drop_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/country_large"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:clickable="true"
                        android:focusable="false"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/ic"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#AAAFC2"
                    android:layout_marginTop="@dimen/dp10"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ic1"
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:src="@drawable/drop_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/state"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:clickable="true"
                        android:focusable="false"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/ic1"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ic2"
                        android:layout_width="@dimen/dp10"
                        android:layout_height="@dimen/dp10"
                        android:src="@drawable/drop_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:clickable="true"
                        android:focusable="false"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/ic2"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:textColorHint="@color/text_hint"
                    app:theme="@style/TextLabel"
                    app:passwordToggleEnabled="false"
                    android:layout_toLeftOf="@+id/forgottext"
                    >
                    <EditText
                        android:id="@+id/zip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/zipcode"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:textColorHint="@color/text_hint"
                    app:theme="@style/TextLabel"
                    >
                    <EditText
                        android:id="@+id/namme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/name"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:textColorHint="@color/text_hint"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:textColorHint="@color/text_hint"
                    app:theme="@style/TextLabel"
                    app:passwordToggleEnabled="false"
                    android:layout_toLeftOf="@+id/forgottext"
                    >
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/phone_number"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"/>
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:textColorHint="@color/text_hint"
                    app:theme="@style/TextLabel"
                    app:passwordToggleEnabled="false"
                    android:layout_toLeftOf="@+id/forgottext"
                    >
                    <EditText
                        android:id="@+id/adrs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:textColorHint="@color/text_hint"
                    app:theme="@style/TextLabel"
                    app:passwordToggleEnabled="false"
                    android:layout_toLeftOf="@+id/forgottext"
                    >
                    <EditText
                        android:id="@+id/adrs2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:background="@android:color/transparent"
                        android:hint="@string/address2"
                        android:inputType="text"
                        android:paddingRight="@dimen/dp15"
                        android:singleLine="true"
                        android:textColorHint="#6E779F"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#AAAFC2"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:text="Cancel"
                android:textSize="@dimen/dp15"
                android:textColor="@color/black_pd"
                android:textAllCaps="false"
                android:layout_margin="@dimen/dp15"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_grey_round_button"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/cancel" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:text="Save"
                android:textSize="@dimen/dp15"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_margin="@dimen/dp15"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_bttn"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/deliver" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
