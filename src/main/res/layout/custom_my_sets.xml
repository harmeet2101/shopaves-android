<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hdrr"
        app:cardElevation="@dimen/dp1"
        android:background="#fefeff">

        <LinearLayout
            android:id="@+id/clickmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:id="@+id/usr_pic"
                android:src="@drawable/female"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toLeftOf="@+id/deleteset"
                android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textColor="@color/black_pd"
                        android:textSize="@dimen/sp13"/>

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="hello this is the best product"
                    android:layout_marginTop="@dimen/dp5"
                    android:textSize="@dimen/sp13"/>

            </LinearLayout>

                <ImageView
                    android:id="@+id/deleteset"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/delete"
                    android:padding="@dimen/dp5"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>