<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_background"
    tools:context="com.shop.shopaves.Activity.OrderHistory">

    <include layout="@layout/app_header"
        android:id="@+id/head"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/ongoinglist"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ongingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp15"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:text="@string/ongoing"/>
            <View
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp4"
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/ongoingview"
                android:background="@color/yellow"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:id="@+id/deleveredlist"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/deleveredtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:textColor="@color/fade_white"
                android:textSize="@dimen/sp13"
                android:text="@string/delivered"/>
            <View
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp4"
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/deleveredview"
                android:visibility="invisible"
                android:background="@color/yellow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:id="@+id/cancelorderlist"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cenceledtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:textColor="@color/fade_white"
                android:textSize="@dimen/sp13"
                android:text="@string/canceled"/>
            <View
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp4"
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/cancelview"
                android:visibility="invisible"
                android:background="@color/yellow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:id="@+id/returnedlist"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/returntext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:textColor="@color/fade_white"
                android:textSize="@dimen/sp13"
                android:text="@string/returned"/>
            <View
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp4"
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/returnview"
                android:visibility="invisible"
                android:background="@color/yellow"/>
        </LinearLayout>
    </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/order_recyclevw"
        android:padding="@dimen/dp10"
        android:background="@color/grey_dividr">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
