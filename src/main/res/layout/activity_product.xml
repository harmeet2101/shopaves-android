<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityproduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetailsActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:background="@color/colorPrimary">

            <!--<ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"

                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:src="@drawable/cart" />


            <ImageView
                android:id="@+id/wishlist"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:src="@drawable/back_arrow" />-->

            <ImageView
                android:id="@+id/back_addrss"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:src="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:src="@drawable/cart" />

            <ImageView
                android:id="@+id/wishlist"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp10"
                android:layout_toLeftOf="@+id/cart"
                android:src="@drawable/wishlist_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/product"
                android:textColor="@color/white"
                android:textSize="@dimen/dp15" />
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <include layout="@layout/cart_layout" />
            </LinearLayout>-->

            <ImageView
                android:id="@+id/editproduct"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/edit"
                android:visibility="gone" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_dividr"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:elevation="@dimen/dp5"
                        app:cardCornerRadius="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp200">

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/viewpager_product"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="@color/white"></android.support.v4.view.ViewPager>

                                <ImageView
                                    android:id="@+id/prodectdefault"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp200" />

                                <RelativeLayout
                                    android:id="@+id/specialoffer"
                                    android:layout_width="@dimen/dp70"
                                    android:layout_height="@dimen/dp20"
                                    android:background="@drawable/ribbon"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/special_offers"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/dp10" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/pro_dots"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/product_zoom"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/product_zoom"
                                    android:layout_width="@dimen/dp20"
                                    android:layout_height="@dimen/dp20"
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="@dimen/dp10"
                                    android:src="@drawable/zoom" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp2"
                                android:background="@color/grey_dividr" />

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginTop="@dimen/dp10"
                                android:background="@color/white"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/addproductviewimg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                </LinearLayout>
                            </HorizontalScrollView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp10"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/product_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:text="-"
                                    android:textColor="@color/black_pd"
                                    android:textSize="@dimen/dp15" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp2"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/black_pd"
                                        android:textSize="@dimen/dp15" />

                                    <RelativeLayout
                                        android:id="@+id/offdiscountview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/price"
                                        android:layout_toRightOf="@+id/price"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/cross_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_marginLeft="@dimen/dp5"
                                            android:text="-"
                                            android:textColor="@color/grey"
                                            android:textSize="@dimen/dp10" />

                                        <TextView
                                            android:id="@+id/offp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBaseline="@+id/cross_price"
                                            android:layout_marginLeft="@dimen/dp10"
                                            android:layout_toRightOf="@+id/cross_price"
                                            android:text="-"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/dp10" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/ratinglayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginRight="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp5"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:id="@+id/rateview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <RatingBar
                                                android:id="@+id/productrate"
                                                style="?android:attr/ratingBarStyleIndicator"
                                                android:layout_width="wrap_content"
                                                android:layout_height="@dimen/dp20"
                                                android:layout_below="@+id/off"
                                                android:layout_marginTop="5dp"
                                                android:progressDrawable="@drawable/rating_custom"
                                                android:rating="0" />
                                        </RelativeLayout>

                                        <LinearLayout
                                            android:id="@+id/reviewclick"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp5"
                                            android:layout_marginTop="@dimen/dp5"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:id="@+id/reviewt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dp5"
                                                android:text="0 review"
                                                android:textColor="@color/text_hint"
                                                android:textSize="@dimen/dp10" />

                                            <ImageView
                                                android:layout_width="@dimen/dp10"
                                                android:layout_height="@dimen/dp10"
                                                android:layout_marginLeft="@dimen/dp5"
                                                android:src="@drawable/drop_right" />
                                        </LinearLayout>
                                    </LinearLayout>


                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp2"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginRight="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp20"
                                    android:background="@color/grey_dividr" />

                                <RelativeLayout
                                    android:id="@+id/otherprofile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/usr"
                                        android:layout_width="@dimen/dp50"
                                        android:layout_height="@dimen/dp50"
                                        android:layout_margin="@dimen/dp10"
                                        android:src="@drawable/female"
                                        app:civ_border_color="@color/black" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/usr"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/usr_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="-"
                                            android:textColor="@color/black_pd"
                                            android:textSize="@dimen/dp15" />

                                        <TextView
                                            android:id="@+id/prdtime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="-"
                                            android:textColor="#AAAFC2"
                                            android:textSize="@dimen/dp13" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp50"
                                    android:layout_marginTop="@dimen/dp5"
                                    android:background="@color/black_grey"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/likeclick"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".4"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/likeproduct"
                                            android:layout_width="@dimen/dp20"
                                            android:layout_height="@dimen/dp20"
                                            android:src="@drawable/unlike" />

                                        <TextView
                                            android:id="@+id/likecount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp5"
                                            android:text="0"
                                            android:textColor="@color/fade_black"
                                            android:textSize="@dimen/dp15" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/commentprd"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".4"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="@dimen/dp20"
                                            android:layout_height="@dimen/dp20"
                                            android:src="@drawable/comment" />

                                        <TextView
                                            android:id="@+id/commentcount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp5"
                                            android:text="0"
                                            android:textColor="@color/fade_black"
                                            android:textSize="@dimen/dp15" />

                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/shareproduct"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp20"
                                        android:layout_weight=".1"
                                        android:src="@drawable/share" />

                                    <ImageView
                                        android:id="@+id/addgroup"
                                        android:layout_width="@dimen/dp20"
                                        android:layout_height="@dimen/dp20"
                                        android:layout_weight=".1"
                                        android:src="@drawable/add_collection" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="@string/specification"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/showspecification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="vertical"
                        android:visibility="visible"></LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:elevation="@dimen/dp5"
                        app:cardCornerRadius="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/desp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/black_grey"
                                android:padding="@dimen/dp10">

                                <TextView
                                    android:id="@+id/d"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/descriptin"
                                    android:textColor="@color/black_pd"
                                    android:textSize="@dimen/dp15" />

                                <ImageView
                                    android:id="@+id/hide_description"
                                    android:layout_width="@dimen/dp20"
                                    android:layout_height="@dimen/dp20"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dp5"
                                    android:src="@drawable/drop_up" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/seater_capacity_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp10"
                                android:tag="1"
                                android:text="-"
                                android:textColor="@color/fade_black"
                                android:visibility="visible" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp10"
                        android:elevation="@dimen/dp5"
                        app:cardCornerRadius="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/addreview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible"></LinearLayout>

                            <RelativeLayout
                                android:id="@+id/viewallreview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp5"
                                android:background="@color/white"
                                android:elevation="@dimen/dp5"
                                android:paddingBottom="@dimen/dp10"
                                android:paddingLeft="@dimen/dp5"
                                android:paddingRight="@dimen/dp5"
                                android:paddingTop="@dimen/dp10"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:text="@string/view_all_reviews"
                                    android:textColor="@color/fade_black"
                                    android:textSize="@dimen/dp15" />

                                <ImageView
                                    android:layout_width="@dimen/dp20"
                                    android:layout_height="@dimen/dp20"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dp5"
                                    android:src="@drawable/drop_right" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/showhidereview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/black_grey"
                                android:padding="@dimen/dp10"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/reviewcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_0_review"
                                    android:textColor="@color/black_pd"
                                    android:textSize="@dimen/sp15" />

                                <TextView
                                    android:id="@+id/writereview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/write_a_review"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp14"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />


                                <TextView
                                    android:id="@+id/deletereview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:text="@string/delete"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp14"
                                    android:visibility="visible"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toRightOf="@+id/reviewcount"
                                    android:layout_toEndOf="@+id/reviewcount"
                                    android:layout_marginStart="12dp" />

                                <ImageView
                                    android:id="@+id/drop"
                                    android:layout_width="@dimen/dp20"
                                    android:layout_height="@dimen/dp20"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dp5"
                                    android:src="@drawable/drop_down"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/cst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp15"
                        android:singleLine="true"
                        android:text="@string/customers_who_viewed_this_product_also_viewed"
                        android:textColor="@color/black_pd"
                        android:textSize="@dimen/dp15"
                        android:visibility="visible" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:scrollbars="none"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/customerviewed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/smtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp15"
                        android:singleLine="true"
                        android:text="@string/similar_products"
                        android:textColor="@color/black_pd"
                        android:textSize="@dimen/dp15"
                        android:visibility="visible" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:scrollbars="none"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/similarproducts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>

                    </HorizontalScrollView>


                    <TextView
                        android:id="@+id/rvtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:singleLine="true"
                        android:text="@string/recently_viewed"
                        android:textColor="@color/black_pd"
                        android:textSize="@dimen/dp15"
                        android:visibility="visible" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp50"
                        android:layout_marginTop="@dimen/dp10"
                        android:scrollbars="none"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/recentlyviewed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_alignParentBottom="true"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT PRODUCT"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cartviewshow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/addtolist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_marginRight="5sp"
                android:src="@drawable/unlike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_wist_list"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

        <TextView
            android:id="@+id/addtocart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Add to Cart"
            android:textColor="@android:color/white"
