<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sales_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shop.shopaves.Activity.SalesAlertActivity">

    <include layout="@layout/app_header"
        android:id="@+id/head"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/alert_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="#FCE102"
        app:paddingStart="@dimen/dp10"
        app:paddingEnd="@dimen/dp10"
        app:tabTextColor="@color/fade_white"
        android:layout_below="@+id/head"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sales_recyclevw"
        android:layout_below="@+id/alert_tab_layout"
        android:padding="@dimen/dp10"
        android:background="@color/grey_dividr">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
